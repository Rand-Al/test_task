<div class="log-in-sign-in">
  <div class="log-in-sign-in__container">
  <h2 class="log-in-sign-in__title">Sign up</h2>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { data: {turbo: false}, class:"log-in-sign-in__form form-log-in-sign-in" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-log-in-sign-in__field">
        <%= f.label :email, class: 'form-log-in-sign-in__label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-log-in-sign-in__input' %>
      </div>

      <div class="form-log-in-sign-in__field">
        <%= f.label :password, class: 'form-log-in-sign-in__label' %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-log-in-sign-in__input' %>
      </div>

      <div class="form-log-in-sign-in__field">
        <%= f.label :password_confirmation, class: 'form-log-in-sign-in__label'  %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-log-in-sign-in__input' %>
      </div>

      <div class="form-log-in-sign-in__actions actions-form-log-in-sign-in">
        <div class="actions-form-log-in-sign-in__wrapper actions-form-log-in-sign-in__wrapper-log_in">
          <%= f.submit "Sign up", class: 'form-log-in-sign-in__button button' %>
          <%= render "devise/shared/links" %>
        </div>
        
      </div>
    <% end %>

    
  </div>
</div>
