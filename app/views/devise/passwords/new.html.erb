<div class="log-in-sign-in">
  <div class="log-in-sign-in__container">
    <h2 class="log-in-sign-in__title">Forgot your password?</h2>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, data:{ turbo: false }, class:"log-in-sign-in__form form-log-in-sign-in" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-log-in-sign-in__field">
        <%= f.label :email, class: 'form-log-in-sign-in__label' %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-log-in-sign-in__input' %>
      </div>

      <div class="form-log-in-sign-in__actions actions-form-log-in-sign-in">
        <div class="actions-form-log-in-sign-in__wrapper actions-form-log-in-sign-in__wrapper-password">
          <%= f.submit "Send me reset password instructions", class: 'form-log-in-sign-in__button button' %>
          <%= render "devise/shared/links" %>
        </div>
      </div>
    <% end %>

    
  </div>
</div>



